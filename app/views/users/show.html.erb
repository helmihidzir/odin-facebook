<h1>Your Profile</h1>
<p>Email: <%= @user.email %></p>
<p>Created at: <%= @user.created_at.to_formatted_s(:long) %></p>
<h2>Friends</h2>
<ul>
  <% for friendship in @user.friendships %>
    <li>
      <%=h friendship.friend.email %>
      (<%= link_to "remove", friendship, method: :delete %>)
    </li>
  <% end %>
</ul>

