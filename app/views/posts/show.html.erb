<p><%= @post.description %></p>
<b>by</b> <i><%= @post.user.email %></i> <b>at</b> <i><%= @post.created_at.to_formatted_s(:short) %></i>
<%= commontator_thread(@post) %>
<% if user_signed_in? %>
  <p>
    <%= link_to "Edit", edit_post_path %>
    <%= link_to "Delete", post_path, method: :delete, data: { confirm: "Are you sure?" } %>
  </p>
<% end %>